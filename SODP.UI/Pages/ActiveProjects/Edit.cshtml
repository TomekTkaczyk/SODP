@page
@model EditModel

@using SODP.Shared.Enums

<br />

<div class="container row p-0 m-0">
    <div class="col">
        <h2 class="text-info">Edycja projektu</h2>
    </div>
</div>

<br />

<div class="container">


    <br />

    <form method="post">
        <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
        <input type="hidden" asp-for="Project.Id" />
        <input type="hidden" asp-for="Project.StageId" />
        <input type="hidden" asp-for="Project.StageSign" />
        <input type="hidden" asp-for="Project.StageTitle" />

        <div class="justify-content-end col-md-7" style="padding:20px">

            <div class="form-group row">
                <div class="col">
                    <input asp-for="Project.Number" class="form-control" placeholder="Numer" readonly />
                    <span asp-validation-for="Project.Number" style="font-size:14px" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <input asp-for="Project.Stage" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <input asp-for="Project.Title" class="form-control" placeholder="Tytuł" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)" />
                    <span asp-validation-for="Project.Title" style="font-size:14px" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="justify-content-end col-md-7" style="padding:20px">

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="basic" aria-selected="true">Podstawowe</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="branch-tab" data-toggle="tab" href="#branch" role="tab" aria-controls="branch" aria-selected="false">Branże</a>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
                    <br />

                    <div class="form-group row">
                        <div class="col-12">
                            <textarea asp-for="Project.Description" class="form-control" placeholder="Opis (opcjonalny)" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <textarea asp-for="Project.TitleStudy" class="form-control" placeholder="Tytuł opracowania" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <textarea asp-for="Project.Investment" class="form-control" placeholder="Nazwa inwestycji" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <textarea asp-for="Project.Address" class="form-control" placeholder="Adres inwestycji" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <textarea asp-for="Project.Investor" class="form-control" placeholder="Inwestor" readonly="@(Model.Project.Status.Equals(ProjectStatus.Active) ? false : true)"></textarea>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="branch" role="tabpanel" aria-labelledby="branch-tab">
                    <br />
                    <div class="form-group">
                        @for (int i = 0; i < Model.Project.Branches.Count; i++)
                        {
                            <input asp-for="Project.Branches[i].Value" type="hidden" value="Project.Branches[i].Value">
                            <input asp-for="Project.Branches[i].Text" type="hidden" value="Project.Branches[i].Text">
                            <div class="row">
                                <div class="col-1 clickable">
                                    <a onclick="RemoveBranch(@Model.Project.Id,@Model.Project.ApplyBranches[i].Value)"
                                       class="text-danger text-right">
                                        <i class="fas fa-minus-circle"></i>
                                    </a>
                                </div>
                                <div class="col">@Model.Project.ApplyBranches[i].Text</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="justify-content-end col-md-7" style="padding:20px">
            <div class="col-12">
                <partial name="_SubmitAndBackButtonPartial" />
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}