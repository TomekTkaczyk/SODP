@using SODP.UI.Pages.ActiveProjects.ViewModels
@model NewProjectVM
<!-- Modal -->
<div class="modal fade" id="newProject" tabindex="-1" role="dialog" aria-labelledby="newProjectLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-info" id="newProjectLabel">Nowy projekt</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div id="error-placeholder"></div>
                <form asp-page-handler="NewProject">
                    <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="Id" id="id" type="hidden" value="@Model.Id" />

                    <div class="form-group">
                        <input asp-for="Number" id="number" class="form-control" value="@Model.Number" placeholder="Numer projektu" readonly="@(Model.Id.Equals(0) ? false : true)" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @Html.DropDownListFor(model => model.StageId, @Model.Stages, "-- Stadium --", new { @class = "form-control" })
                        <span asp-validation-for="StageId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Name" id="title" class="form-control" placeholder="Tytuł" />
                        <span asp-validation-for="Name" style="font-size:14px" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <partial name="_SubmitAndBackButtonModalPartial" />
            </div>
        </div>
    </div>
</div>
