@using SODP.UI.Pages.ActiveProjects.ViewModels
@model SetDesignerVM
<!-- Modal -->
<div class="modal fade" id="setRole" tabindex="-1" role="dialog" aria-labelledby="setRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-info" id="setRoleLabel">Wybierz selector: @Model.Selector</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div id="error-placeholder"></div>
                <form asp-page-handler="SetRole">
                    <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="ProjectId" id="designerId" type="hidden" value="@Model.ProjectId" />
                    <input asp-for="BranchId" id="designerId" type="hidden" value="@Model.BranchId" />
                    <input asp-for="Selector" id="selector" type="hidden" value="@Model.Selector" />
                    <input asp-for="DesignerId" id="designerId" type="hidden" value="@Model.DesignerId" />
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.DesignerId, @Model.Designers, "-- Projektant/Sprawdzający --", new { @class = "form-control" })
                        <span asp-validation-for="DesignerId" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-6">
                        <button type="button" class="btn btn-primary" data-save="modal">Wybierz</button>
                    </div>
                    <div class="col-6">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
