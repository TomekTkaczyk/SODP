@using SODP.UI.Pages.ActiveProjects.ViewModels
@using SODP.UI.Services;
@using SODP.Shared.Enums;

@model AvailableRolesVM
@*@inject ITranslator _translator;*@
<!-- Modal -->
<div class="modal fade" id="addTechnicalRole" tabindex="-1" role="dialog" aria-labelledby="addTechnicalRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-info" id="addTechnicalRoleLabel">Samodzielne funkcje techniczne</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div id="error-placeholder"></div>
                <form asp-page-handler="addTechnicalRole">
                    <input asp-for="PartBranchId" type="hidden" value="@Model.PartBranchId" />
                    <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.SelectedRoleId, @Model.ItemsRole, new { @class = "form-control" })
                        <span asp-validation-for="@Model.SelectedRoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.SelectedLicenseId, @Model.ItemsLicense, new { @class = "form-control" })
                        <span asp-validation-for="@Model.SelectedLicenseId" class="text-danger"></span>
                    </div>
                
                </form>
            </div>
            <div class="modal-footer">
                <div class="row justify-content-center">
                    <div class="col">
                        @*<button type="button" class="btn btn-primary" data-save="modal" @((Model.ItemsRole.Count==0 || Model.ItemsLicense.Count==0) ? " hidden=true" : "")>Wybierz</button>*@
                        <button type="button" class="btn btn-primary" data-save="modal">Wybierz</button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
