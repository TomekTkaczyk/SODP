@using SODP.UI.Pages.ActiveProjects.ViewModels
@using SODP.UI.Services;
@model TechnicalRoleVM
@inject ITranslator _translator;
<!-- Modal -->
<div class="modal fade" id="technicalRoles" tabindex="-1" role="dialog" aria-labelledby="technicalRolesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-info" id="technicalRolesLabel">Samodzielne funkcje techniczne</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div id="error-placeholder"></div>
                <form asp-page-handler="TechnicalRoles">
                    <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="ProjectId" type="hidden" value="@Model.ProjectId" />
                    <input asp-for="BranchId" type="hidden" value="@Model.BranchId" />
                    @foreach (var role in Model.Roles)
                    {
                        <div>
                            <label>@_translator.Translate(role.Key.ToString(),Languages.Pl): @role.Value.Designer</label>
                        </div>
                    }
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.RoleId, @Model.AvailableRoles, new { @class = "form-control" })
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.LicenseId, @Model.Licenses, new { @class = "form-control" })
                        <span asp-validation-for="LicenseId" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <partial name="_SubmitAndBackButtonModalPartial" />
            </div>
        </div>
    </div>
</div>
