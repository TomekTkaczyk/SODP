@using SODP.UI.Pages.ActiveProjects.ViewModels
@using SODP.UI.Services;
@model ProjectPartVM
@inject ITranslator _translator

<label class="text-secondary">Branże w ramach części:</label>
@if (Model.Branches.Count > 0)
{
    @foreach (var item in Model.Branches)
    {
        <div class="row">
            <div class="col-2">
                <a onclick='Delete("/api/v0_01/projects/parts/branches/@item.Id")'
                   class="btn btn-lg m-0 p-0 text-danger clickable"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="Usuń branżę">
                    <i class="fas fa-lg fa-trash-alt "></i>
                </a>
            </div>
            <div class="col">@item.Branch.ToString()</div>
        </div>
        @foreach (var role in item.Roles)
        {
            <div class="row">
                <div class="col-3">@_translator.Translate(role.Role, Languages.Pl):</div>
                <div class="col">@role.Designer</div>
            </div>
        }
    }
}
