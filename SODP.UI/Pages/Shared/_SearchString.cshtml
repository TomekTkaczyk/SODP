@using SODP.Shared.Response
@using SODP.UI.ViewModels
@model ListPageModel 

<form>
    <div class="row justify-content-end pb-1">
        <div class="col-5">
            <div class=row p-0 >
                <div class="col-5 col-md-4 p-0 d-flex align-items-center">
                    Rozmiar strony
                </div>
                <div class="col col-md-6 col-lg-4 col-xl-3 d-flex align-items-center">
                    @Html.DropDownListFor(model => model.PageSize, @Model.PageSizeList, null, new { @class = "form-control", @id = "pageSize", @onchange = "$('form').submit();"})
                </div>
            </div>
        </div>
        <div class="col">
        </div>
        <div class="col-3 p-0 d-flex align-items-center">
            <input asp-for="SearchString" class="form-control" placeholder="Filtr" id="searchString"/>
        </div>
        <div class="col-1 p-0 p-0 d-flex align-items-center">
            <button type="submit"
                    class="btn btn-info form-control text-white float-right p-0 m-0"
                    title="Szukaj">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>


