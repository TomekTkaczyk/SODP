@using SODP.Shared.Response
@using SODP.UI.ViewModels
@model ListPageModel

<form>
    <div class="row justify-content-end">
        <div class="col-3">
            <div class=row>
                <div class=col-5>
                    Rozmiar strony
                </div>
                <div class="col">
                    @Html.DropDownListFor(model => model.PageSize, @Model.PageSizeList, null, new { @class = "form-control", @id = "pageSize", @onchange = "$('form').submit();"})
                </div>
            </div>
        </div>
        <div class="col">
        </div>
        <div class="col-3 p-0 m-0">
            <input asp-for="SearchString" class="form-control" placeholder="Filtr" id="searchString"/>
        </div>
        <div class="col-1 p-0 m-0">
            <button type="submit"
                    class="btn btn-info form-control text-white float-right p-0 m-0"
                    title="Szukaj">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>


