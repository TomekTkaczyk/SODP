@page
@using Microsoft.AspNetCore.Identity
@using SODP.Model

@model IndexModel

@{ 
    ViewData["Title"] = "Projekty zakończone"; 
}

@inject SignInManager<User> SignInManager

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>

    @if (Model.ProjectsViewModel.Projects.Count() > 0)
    {
        <div id="ProjectTable" class="col-12 p-3 mt-3">
            <table class="table table-sm table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Numer</th>
                        <th>Stadium</th>
                        <th>Tytuł</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectsViewModel.Projects)
                    {
                        <tr class="m-0 p-0">
                            <td class="m-0 p-0">
                                <a href="/ArchiveProjects/Edit?Id=@item.Id" data-toggle="tooltip" title="Edycja" data-placement="top">@item.Number</a>
                            </td>
                            <td class="m-0 p-0">
                                <a href="/ArchiveProjects/Edit?Id=@item.Id" data-toggle="tooltip" title="Edycja" data-placement="top">@item.Stage.Sign</a>
                            </td>
                            <td class="m-0 p-0">
                                <a href="/ArchiveProjects/Edit?Id=@item.Id" data-toggle="tooltip" title="Edycja" data-placement="top">@item.Title</a>
                            </td>
                            <td class="m-0 p-0 text-right">
                                <div>
                                    <a onclick='Restore("/api/v0_01/archive-projects/@item.Id/restore")'
                                       class='btn btn-md m-0 p-0 text-success'
                                       data-toggle="tooltip"
                                       data-placement="top"
                                       title="Przywróć projekt">
                                        <i class="fas fa-archive"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
            <div class="col-12 text-right">
                <div class="btn-group" asp-action="Index"
                     page-model="@Model.ProjectsViewModel.PageInfo"
                     page-class="btn border"
                     page-class-normal="btn btn-light"
                     page-class-selected="btn btn-info">
                </div>
            </div>
        </div>
    }
    else
    {
        <p> Lista projektów jest pusta</p>
    }
</div>

@section Scripts{
    <script src="~/js/restore.js"></script>
    <script src="~/js/archiveProjectList.js"></script>

}