@page
@using Microsoft.AspNetCore.Identity
@using SODP.Model

@model IndexModel

@{
    ViewData["Title"] = "Projekty zakończone";
}

@inject SignInManager<User> SignInManager

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>

    @if (Model.ProjectsViewModel.Projects.Count() > 0)
    {
        <div id="ProjectTable" class="col-12 p-3 mt-3">
            <table class="table table-sm table-hover">
                <thead class="thead-light">
                    <tr>
                        <th class="m-0 p-0 pl-1 pr-1">Numer</th>
                        <th class="m-0 p-0 pl-1 pr-1">Stadium</th>
                        <th class="m-0 p-0 pl-1 pr-1">Tytuł</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectsViewModel.Projects)
                    {
                    <tr class="m-0 p-0">
                        <td onclick='Edit("/ArchiveProjects/Edit?Id=@item.Id")'
                            class="cell clickable"
                            data-toggle="tooltip"
                            title="Edycja"
                            data-placement="top">
                            @item.Number
                        </td>
                        <td onclick='Edit("/ArchiveProjects/Edit?Id=@item.Id")'
                            class="cell clickable"
                            data-toggle="tooltip"
                            title="Edycja"
                            data-placement="top">
                            @item.Stage.Sign
                        </td>
                        <td onclick='Edit("/ArchiveProjects/Edit?Id=@item.Id")'
                            class="cell clickable"
                            data-toggle="tooltip"
                            title="Edycja"
                            data-placement="top">
                            @item.Title
                        </td>
                        <td class="m-0 p-0 pl-1 pr-1 text-center">
                            <a onclick='Restore("/api/v0_01/archive-projects/@item.Id/restore")'
                                class='btn btn-md m-0 py-0 text-success'
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Przywróć projekt">
                                <i class="fas fa-archive"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
            <div class="col-12 text-right">
                <div class="btn-group" asp-action="Index"
                     page-model="@Model.ProjectsViewModel.PageInfo"
                     page-class="btn border"
                     page-class-normal="btn btn-light"
                     page-class-selected="btn btn-info">
                </div>
            </div>
        </div>
    }
    else
    {
        <p> Lista projektów jest pusta</p>
    }
</div>

@section Scripts{
    <script src="~/js/edit.js"></script>
    <script src="~/js/restore.js"></script>
    <script src="~/js/archiveProjectList.js"></script>
}