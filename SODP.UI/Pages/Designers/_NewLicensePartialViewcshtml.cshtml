@using SODP.UI.Pages.Designers.ViewModels
@model LicenseVM
<!-- Modal -->
<div class="modal fade" id="editdesigner" tabindex="-1" role="dialog" aria-labelledby="editStageLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-info" id="editDesignerLabel">Nowy projektant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div id="error-placeholder"></div>
                <form asp-page-handler="NewDesigner">
                    <input name="IsValidate" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <div class="form-group">
                        <input class="form-control" asp-for="Contents" value="@Model.Contents" placeholder="Numer" />
                        <span class="text-danger" asp-validation-for="Contents"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <partial name="_SubmitAndBackButtonModalPartial" />
            </div>
        </div>
    </div>
</div>
