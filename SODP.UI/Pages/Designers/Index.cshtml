@page
@model IndexModel

@{
    ViewData["Title"] = "Projektanci";
}

@using Microsoft.AspNetCore.Identity
@using SODP.Model
@using System.Text.Json;
@using System.Text.Json.Serialization;

@inject SignInManager<User> SignInManager

<link rel="stylesheet " href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle/css/bootstrap4-toggle.min.css">

<script src="~/lib/jquery/dist/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div id="modal-placeholder"></div>
        <div class="col-3 justify-content-end">
            <button class="btn btn-info form-control text-white float-right"
                    type="button"
                    onclick="EditDesigner()"
                    title="Nowy projektant">
                <i class="fas fa-plus"></i>&nbsp;&nbsp;&nbsp;Nowy projektant
            </button>
        </div>
    }
</div>

<br />

@if (Model.Designers.Designers.Count() > 0)
{
    <div class="accordion" id="designersAccordion">
        @foreach (var item in Model.Designers.Designers)
        {
            <div class="button card">
                <div class="card-header"
                     id="card-header-@item.Id">
                    <div class="row">

                        <div class="col font-weight-bold clickable"
                             onclick="accordionCollapse(@item.Id)"
                             id="card-head-@item.Id"
                             data-toggle="collapse"
                             data-target="#collapse-@item.Id"
                             aria-expanded="false"
                             aria-controls="collapse-@item.Id">
                            @item.Title @item.Firstname @item.Lastname
                        </div>

                        <div class="colgroup justify-content-end mr-2">

                            <a id="newLicense-@item.Id"
                               onclick="NewLicense(@item.Id)"
                               class="btn btn-lg mb-1 mt-1 ml-1 mr-1 p-1 text-success"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Dodaj uprawnienia"
                               hidden>
                                <i class="fas fa-plus"></i>
                            </a>

                            <a id="editDesigner-@item.Id"
                               onclick='EditDesigner(@item.Id)'
                               class="btn btn-lg mb-1 mt-1 ml-1 mr-1 p-1 text-success"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Edycja"
                               hidden>
                                <i class="fas fa-edit"></i>
                            </a>

                            <a id="deleteDesigner-@item.Id"
                               onclick='Delete("/api/v0_01/designers/@item.Id")'
                               class="btn btn-lg mb-1 mt-1 ml-1 mr-1 p-1 text-danger"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Usuń projektanta"
                               hidden>
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            <style>
                                .toggle.ios, .toggle-on.ios, .toggle-off.ios {
                                    border-radius: 30px;
                                }

                                    .toggle.ios .toggle-handle {
                                        border-radius: 30px;
                                    }
                            </style>
                            <input type="checkbox" asp-for="@item.ActiveStatus" name="checkbox_@item.Id"
                                   onchange="handleChange(@item.Id,this.checked)"
                                   id="checkbox_@item.Id"
                                   data-toggle="toggle"
                                   title="Aktywność"
                                   data-style="ios">
                        </div>
                    </div>
                </div>
            </div>
            <div id="collapse-@item.Id"
                 class="collapse hide"
                 aria-labelledby="heading-@item.Id"
                 data-parent="#designersAccordion">

                <div class="card-body" id="license-@item.Id"></div>
            </div>
        }
    </div>
}
else
{
    <br />
    <p> Lista projektantów jest pusta</p>
}

@section Scripts{
    <script src="~/js/delete.js"></script>
    <script src="~/js/initModalPlaceholder.js"></script>
    <script src="~/js/designersList.js"></script>

    <script>
        function handleChange(id, checked) {

            let c = checked ? 1 : 0;
            let url = `/api/v0_01/designers/${id}/${c}`;

            $.ajax({
                type: "PUT",
                url: url,
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                data: JSON.stringify(c),
                success: function (response) {
                },
                error: function (jqXHR, exception) {
                    console.log(jqXHR);
                    console.log(exception);
                }
            });
        }
    </script>

    <script>
        function accordionCollapse(id) {
            if (document.getElementById(`card-head-${id}`).ariaExpanded !== "true") {
                document.getElementById(`newLicense-${id}`).hidden = false;
                document.getElementById(`editDesigner-${id}`).hidden = false;
                document.getElementById(`deleteDesigner-${id}`).hidden = false;
                $(`#license-${id}`).load(`/Designers/index?handler=LicensesPartial&id=${id}`);
            }
            else {
                document.getElementById(`newLicense-${id}`).hidden = true;
                document.getElementById(`editDesigner-${id}`).hidden = true;
                document.getElementById(`deleteDesigner-${id}`).hidden = true;
            }
        }
    </script>
}
