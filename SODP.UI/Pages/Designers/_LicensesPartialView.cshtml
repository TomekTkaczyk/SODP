@using SODP.UI.Pages.Designers.ViewModels

@model LicensesVM

<button type="button"
        class="btn btn-info text-white"
        title="Nowe uprawnienia"
        data-toggle="ajax-modal"
        data-url="@Url.Page("Index","NewLicense")">
    <i class="fas fa-plus"></i>
</button>
<div>
    @if (Model.Licenses.Count > 0)
    {

        @foreach (var lic in Model.Licenses)
        {
            <div class="row">
                <div class="col font-weight-bold">
                    @lic.Contents
                </div>
            </div>
            @foreach (var branch in lic.Branches)
            {
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col">
                        (@branch.Sign) @branch.Title
                    </div>
                </div>
            }
        }
    }
    else
    {
        <p>Brak uprawnień</p>
    }
</div>
