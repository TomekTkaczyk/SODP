@page
@model SODP.UI.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Użytkownicy";
}


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Użytkownicy systemu</h2>
    </div>

    <div class="col-3">
        <a role="button" class="btn btn-info form-control text-white" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i>&nbsp;&nbsp;&nbsp;Nowy użytkownik</a>
    </div>

    <div id="StageTable" class="col-12 p-3 mt-3">
        <form method="post">
            @if (Model.Users.Count() > 0)
            {
                <table class="table table-sm table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Login</th>
                            <th>Imię i nazwisko</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users.AsEnumerable())
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => user.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => user.Firstname) @Html.DisplayFor(m => user.Lastname)
                                </td>
                                <td>
                                    <div class="row group justify-content-end mr-0">
                                        <div>
                                            <a role="button" class="btn btn-sm btn-info text-white mb-0 mt-0 ml-1 mr-1 p-1" asp-page="Edit"
                                               asp-route-Id="@user.Id">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> Lista użytkowników jest pusta</p>
            }
        </form>
    </div>
</div>


@section Scripts{
    <script src="~/js/usersList.js"></script>
}

