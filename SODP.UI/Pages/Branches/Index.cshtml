@page
@model IndexModel
@{ ViewData["Title"] = "Branże"; }

@using Microsoft.AspNetCore.Identity
@using SODP.Model

@inject SignInManager<User> SignInManager

<link rel="stylesheet " href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle/css/bootstrap4-toggle.min.css">

<script src="~/lib/jquery/dist/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>

<br />

<div class="container row p-0 m-0">
    <div class="col-8">
        <h2 class="text-info">@ViewData["Title"]</h2>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div id="modal-placeholder"></div>
        <div class="col-4 justify-content-end">
            <button type="button"
                    class="btn btn-info btn-lg form-control text-white float-right"
                    data-toggle="ajax-modal"
                    title="Nowa branża"
                    data-target="editdesigner"
                    data-url="@Url.Page("Index", "NewBranch")">
                <i class="fas fa-plus"></i>&nbsp;&nbsp;&nbsp;Nowa branża
            </button>
        </div>
     }
</div>

<br />
<br />

@if (Model.BranchesViewModel.Branches.Count() > 0)
{
    <div class="accordion" id="branchAccordion">
        @foreach (var branch in Model.BranchesViewModel.Branches)
        {
            <div class="card">
                <div class="card-header" id="branch_@branch.Id">
                    <div class="row ">
                        <div class="col">
                            <a data-toggle="collapse" data-target="#collapse_@branch.Id" aria-expanded="false" aria-controls="collapseOne">(@branch.Sign) @branch.Title</a>
                        </div>
                        <div class="colgroup justify-content-end mr-0">
                            <style>
                                .toggle.ios, .toggle-on.ios, .toggle-off.ios {
                                    border-radius: 30px;
                                }

                                    .toggle.ios .toggle-handle {
                                        border-radius: 30px;
                                    }
                            </style>
                            <input type="checkbox" asp-for="@branch.ActiveStatus" name="checkbox_@branch.Id"
                                   onchange="handleChange(@branch.Id,this.checked)"
                                   id="checkbox_@branch.Id"
                                   title="Aktywność"
                                   data-toggle="toggle"
                                   data-style="ios">
                            <a onclick='Delete("/api/v0_01/branches/@branch.Id")'
                               class="btn btn-lg mb-0 mt-0 ml-1 mr-1 p-1 text-danger"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Usuń branżę">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="collapse_@branch.Id" class="collapse hide" aria-labelledby="branch_@branch.Id" data-parent="#branchAccordion">
                <div class="card-body">
                    Anim pariatur cliche reprehenderit...
                </div>
            </div>
        }
    </div> 
}
else
{
    <p> Lista branż jest pusta</p>
}

@section Scripts{
    <script src="~/js/delete.js"></script>
    <script src="~/js/initModalPlaceholder.js"></script>
    <script src="~/js/branchesList.js"></script>

    <script>
        function DeleteBranch(url) {
            Delete(url);
        }
    </script>

    <script>
        function NewBranch(currentId) {
            $.ajax({
                type: "Get",
                url: '@Url.Page("Index","NewBranch")',
                success: function (data) {
                    $('#modal-placeholder').html(data);
                    $('#editdesigner').modal('show');
                }
            })
        }
    </script>
}