@page
@model IndexModel

@{ 
    ViewData["Title"] = "Branże"; 
}

@using Microsoft.AspNetCore.Identity
@using SODP.Model
@using System.Text.Json;
@using System.Text.Json.Serialization;

@inject SignInManager<User> SignInManager

<script src="~/lib/jquery/dist/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>

<div class="container p-0 m-0">
    <div class="row pl-3 pr-3">
        <div class="col-8">
            <h2 class="text-info">@ViewData["Title"]</h2>
        </div>
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="col-4 p-0 m-0">
                <button type="button"
                        class="btn btn-info form-control text-white float-right"
                        title="Nowa branża"
                        data-toggle="ajax-modal"
                        data-url="@Url.Page("Index", "UpdateBranch")">
                    <i class="fas fa-plus"></i>&nbsp;&nbsp;&nbsp;Nowa branża
                </button>
            </div>
        }
    </div>
</div>

@if (Model.Branches.Branches.Count() > 0)
{
    <div id="branchesAccordion" class="accordion col-12 p-3 mt-0">
        @foreach (var item in Model.Branches.Branches.OrderBy(x => x.Order))
        {
            <div class="button card">
                <div class="card-header" 
                     id="card-header-@item.Id">
                    <div class="row ">
                        <div class="col font-weight-bold clickable"
                             onclick="accordionCollapse(this,@item.Id)"
                             id="card-head-@item.Id"
                             data-toggle="collapse"
                             data-target="#collapse-@item.Id"
                             aria-expanded="false"
                             aria-controls="collapse-@item.Id">
                            @item.Sign-@item.Name
                        </div>

                        <div class="colgroup justify-content-end mr-2">
                            
                            <a name="additionalBtn"
                               id="editBranch-@item.Id"
                               onclick='EditBranch(@item.Id)'
                               class="btn btn-lg mb-1 mt-1 ml-1 mr-1 p-1"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Edycja branży"
                               hidden>
                                <i class="fas fa-edit text-success"></i>
                            </a>

                            <a name="additionalBtn"
                               id="deleteBranch-@item.Id"
                               onclick='Delete("/api/v0_01/branches/@item.Id")'
                               class="btn btn-lg mb-1 mt-1 ml-1 mr-1 p-1"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Usuń branżę"
                               hidden>
                                <i class="fas fa-times text-danger"></i>
                            </a>

                            <style>
                                .toggle.ios, .toggle-on.ios, .toggle-off.ios {
                                    border-radius: 20px;
                                }

                                    .toggle.ios .toggle-handle {
                                        border-radius: 20px;
                                    }
                            </style>
                            <input type="checkbox" asp-for="@item.ActiveStatus" name="checkbox_@item.Id"
                                   onchange="handleChange(@item.Id, this.checked)"
                                   id="checkbox_@item.Id"
                                   data-toggle="toggle"
                                   title="Aktywność"
                                   data-style="ios">
                        </div>
                    </div>
                </div>
            </div>
            <div id="collapse-@item.Id"
                 class="collapse hide"
                 aria-labelledby="heading-@item.Id"
                 data-parent="#branchesAccordion">

                <div class="card-body" id="designer-@item.Id">
                    Coś poszło nie tak z ładowaniem listy branż
                </div>
            </div>
        }
    </div>
}
else
{
    <p> Lista branż jest pusta</p>
}

@section Scripts{
    <script src="~/js/delete.js"></script>
    <script src="~/js/initModalPlaceholder.js"></script>
    <script src="~/js/branchesList.js"></script>

    <script>
        function EditBranch(id) {
            $.ajax({
                type: "Get",
                url: `@Url.Page("Index","UpdateBranch")&Id=` + id,
                success: function (data) {
                    $('#modal-placeholder').html(data);
                    $('#updateBranch').modal('show');
                }
            })
        }
    </script>

    <script>
        function handleChange(id, checked) {

            let c = checked ? 1 : 0;
            let url = `/api/v0_01/branches/${id}/${c}`;

            $.ajax({
                type: "PUT",
                url: url,
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                data: JSON.stringify(c),
                success: function (response) {
                },
                error: function (jqXHR, exception) {
                    console.log(jqXHR);
                    console.log(exception);
                }
            });
        }
    </script>

    <script>
        function accordionCollapse(self, id) {
            var additionalElements = document.getElementsByName('additionalBtn');
            var inputList = Array.prototype.slice.call(additionalElements);
            for (let i = 0; i < inputList.length; i++) {
                inputList[i].hidden = true;
            }

            if (document.getElementById(`card-head-${id}`).ariaExpanded !== "true") {
                document.getElementById(`editBranch-${id}`).hidden = false;
                document.getElementById(`deleteBranch-${id}`).hidden = false;
                $(`#designer-${id}`).load(`/Branches/index?handler=PartialDesigners&id=${id}`);
            }
        }
    </script>
}